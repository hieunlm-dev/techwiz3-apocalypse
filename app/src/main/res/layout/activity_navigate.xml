<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigateActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">


            <RelativeLayout
                android:id="@+id/rltMarksStudent"
                android:layout_width="175dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView123"
                    android:layout_width="56dp"
                    android:layout_height="52dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/revision"

                    />


                <TextView
                    android:id="@+id/textLabel13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView123"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="Revision Classes"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltProgressStudent"
                android:layout_width="175dp"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView13"
                    android:layout_width="63dp"
                    android:layout_height="54dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="20"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/scores" />

                <TextView
                    android:id="@+id/textLabel12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView13"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="Marks"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rltResourceStudent"
                android:layout_width="175dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/helpline" />

                <TextView
                    android:id="@+id/textLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView3"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="Helpline"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltReviewClassStudent"
                android:layout_width="175dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/presentation" />

                <TextView
                    android:id="@+id/textLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView1"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="Study Resource"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">


            <RelativeLayout
                android:id="@+id/rltHelpStudent"
                android:layout_width="175dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageAcaPro"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/growth" />

                <TextView
                    android:id="@+id/textLa1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageAcaPro"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="Academic Progress"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGuard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rltFeedbackStudent"
                android:layout_width="175dp"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/feedback" />

                <TextView
                    android:id="@+id/textFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageFeedback"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="Feedback"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltContactStudent"
                android:layout_width="175dp"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageContact"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:srcCompat="@drawable/contact" />

                <TextView
                    android:id="@+id/textContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageContact"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:text="Contact Us"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="28dp"
        android:text="Welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>