                    <TextView android:background="@drawable/border"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:paddingHorizontal="2dp"
                        android:layout_marginRight="2dp"
                        android:text="Biology" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvBiology15"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="60" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvBiology45"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="45" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvBiologyMid"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="90" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvBiologyFinal"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="90" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvBiologyAverage"
                        android:gravity="center"
                        android:text="76" />

                </TableRow>

                <TableRow
                    android:paddingVertical="1dp"
                    >

                    <TextView android:background="@drawable/border"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:paddingHorizontal="2dp"
                        android:layout_marginRight="2dp"
                        android:text="Literature" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvLiterature15"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="60" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvLiterature45"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="45" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvLiteratureMid"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="90" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvLiteratureFinal"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="90" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvLiteratureAverage"
                        android:gravity="center"
                        android:text="76" />

                </TableRow>

                <TableRow
                    android:paddingTop="1dp"
                    >

                    <TextView android:background="@drawable/border"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:paddingHorizontal="2dp"
                        android:layout_marginRight="2dp"
                        android:text="Civic Education" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvCivic15"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="60" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvCivic45"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="45" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvCivicMid"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="90" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvCivicFinal"
                        android:gravity="center"
                        android:layout_marginRight="2dp"
                        android:text="90" />

                    <TextView android:background="@drawable/border"
                        android:id="@+id/tvCivicAverage"
                        android:gravity="center"
                        android:text="76" />

                </TableRow>


            </TableLayout>
        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>